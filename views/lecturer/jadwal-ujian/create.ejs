<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= title %> - Website Ujian Online</title>
    <% include ../../partials/header.ejs %>
  </head>
  <body>
    <div class="min-h-full">
      <% include ../../partials/navbar.ejs %>

      <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
          <div class="text-3xl font-bold text-gray-900 breadcrumbs">
            <ul>
              <li>
                <a href="/lecturer/jadwal-ujian">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    class="w-6 h-6 mr-2 stroke-current"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                    ></path>
                  </svg>
                  Jadwal Ujian
                </a>
              </li>
              <li>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  class="w-6 h-6 mr-2 stroke-current"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
                Tambah Jadwal Ujian
              </li>
            </ul>
          </div>
        </div>
      </header>
      <main data-aos="fade-in">
        <div class="max-w-7xl mx-auto py-6 px-6 md:px-8">
          <!-- START: Content -->
          <% include ../../partials/alert.ejs %>

          <div class="mt-10 sm:mt-0">
            <div class="md:grid md:grid-cols-3 md:gap-6">
              <div class="md:col-span-1">
                <div class="px-4 sm:px-0">
                  <h3 class="text-lg font-medium leading-6 text-gray-900">
                    Tambah Data Jadwal Ujian
                  </h3>
                  <p class="mt-1 text-sm text-gray-600">
                    Silahkan isi kolom yang telah disediakan.
                  </p>
                </div>
              </div>
              <div class="mt-5 md:mt-0 md:col-span-2">
                <form
                  action="/lecturer/jadwal-ujian/store-jadwal-ujian"
                  method="POST"
                >
                  <div class="shadow-lg overflow-hidden sm:rounded-md">
                    <div class="px-4 py-5 bg-white sm:p-6">
                      <div class="grid grid-cols-6 gap-6">
                        <div class="col-span-6">
                          <div class="form-control">
                            <label class="label" for="mataKuliah">
                              <span class="label-text font-semibold"
                                >Mata Kuliah</span
                              >
                            </label>
                            <select
                              class="
                                select select-bordered select-primary
                                w-full
                              "
                              name="mataKuliah"
                              id="mataKuliah"
                              required
                            >
                              <option
                                disabled="disabled"
                                selected="selected"
                                value=""
                              >
                                -Pilih Mata Kuliah-
                              </option>
                              <% dosenMatkuls.mataKuliah.forEach(matkul => { %>
                              <option value="<%= matkul._id %>">
                                <%= matkul.nama %>
                              </option>
                              <% }) %>
                            </select>
                          </div>
                        </div>

                        <div class="col-span-6">
                          <div class="form-control">
                            <label class="label" for="namaUjian">
                              <span class="label-text font-semibold"
                                >Nama Ujian</span
                              >
                            </label>
                            <input
                              type="text"
                              name="namaUjian"
                              id="namaUjian"
                              class="input input-bordered input-primary"
                              required
                            />
                          </div>
                        </div>

                        <div class="col-span-6">
                          <div class="form-control">
                            <label class="label" for="jumlahSoal">
                              <span class="label-text font-semibold"
                                >Jumlah Soal</span
                              >
                            </label>
                            <input
                              type="number"
                              min="0"
                              name="jumlahSoal"
                              id="jumlahSoal"
                              class="input input-bordered input-primary"
                              required
                            />
                          </div>
                        </div>

                        <div class="col-span-6">
                          <div class="form-control">
                            <label class="label" for="durasiUjian">
                              <span class="label-text font-semibold"
                                >Durasi Ujian (Menit)</span
                              >
                            </label>
                            <input
                              type="number"
                              min="0"
                              name="durasiUjian"
                              id="durasiUjian"
                              class="input input-bordered input-primary"
                              required
                            />
                          </div>
                        </div>

                        <div class="col-span-3">
                          <div class="form-control">
                            <label class="label" for="mulaiUjian">
                              <span class="label-text font-semibold"
                                >Tanggal Mulai</span
                              >
                            </label>
                            <input
                              type="datetime-local"
                              name="mulaiUjian"
                              id="mulaiUjian"
                              class="input input-bordered input-primary"
                              required
                            />
                          </div>
                        </div>

                        <div class="col-span-3">
                          <div class="form-control">
                            <label class="label" for="terlambatUjian">
                              <span class="label-text font-semibold"
                                >Terlambat Ujian</span
                              >
                            </label>
                            <input
                              type="datetime-local"
                              name="terlambatUjian"
                              id="terlambatUjian"
                              class="input input-bordered input-primary"
                              required
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                      <a
                        href="/lecturer/jadwal-ujian"
                        type="button"
                        class="btn btn-sm md:btn-md btn-ghost"
                      >
                        Kembali
                      </a>
                      <button
                        type="submit"
                        class="btn btn-sm md:btn-md btn-primary"
                      >
                        Tambah
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- END: Content -->
        </div>
      </main>
    </div>

    <% include ../../partials/script.ejs %>
  </body>
</html>
