<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= title %> - Website Ujian Online</title>
    <% include ../../partials/header.ejs %>

    <link rel="stylesheet" href="/stylesheets/dataTable.css" />
  </head>
  <body>
    <div class="min-h-full">
      <% include ../../partials/navbar.ejs %>

      <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
          <h1 class="text-3xl font-bold text-gray-900">Jadwal Ujian</h1>
        </div>
      </header>
      <main data-aos="fade-in">
        <div class="max-w-7xl mx-auto py-6 px-6 md:px-8">
          <!-- START: Content -->
          <% include ../../partials/alert.ejs %> 

          <% if (jadwalUjians.length != 0) { %>

          <div class="flex flex-row items-center justify-between">
            
          </div>

          <div class="overflow-x-auto mt-6">
            <table
              id="tableJadwalUjian"
              class="stripe hover"
              style="width: 100%; padding-top: 1em; padding-bottom: 1em"
            >
              <thead>
                <tr>
                  <th></th>
                  <th>Mata Kuliah</th>
                  <th>Nama Ujian</th>
                  <th>Jumlah Soal</th>
                  <th>Waktu</th>
                  <th>Token</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% jadwalUjians.forEach(jadwalUjian => { %>
                  <tr>
                    <td>
                      <label>
                        <input type="checkbox" class="checkbox" name="checkbox" id="checkbox" value="" />
                      </label>
                    </td>
                    <td><%= jadwalUjian.mataKuliah.nama %></td>
                    <td><%= jadwalUjian.namaUjian %></td>
                    <td><%= jadwalUjian.jumlahSoal %></td>
                    <td><%= jadwalUjian.mulaiUjian %> (<%= jadwalUjian.durasiUjian %> Menit)</td>
                    <td><%= jadwalUjian.token %></td>
                    <td>
                      <!-- Di sini button untuk Generate Ulang Token -->
                      <a href="/lecturer/jadwal-ujian/edit-jadwal-ujian/<%= jadwalUjian._id %>" class="btn btn-sm lg:btn-md btn-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 lg:h-6 w-4 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                        </svg>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <div class="flex flex-col justify-center items-center py-10 space-y-3">
            <img src="/images/404.png" alt="404 - Not Found" class="mb-4" />
            <p class="text-center font-light">
              Ooppss, nampaknya data jadwal ujian saat ini kosong, <br />
              silahkan tambahkan jadwal ujian.
            </p>
            <a href="/lecturer/jadwal-ujian/create-jadwal-ujian" type="button">
              <button class="btn btn-md btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg> Tambah
              </button> 
            </a>
          <% } %>
          <!-- END: Content -->
        </div>
      </main>
    </div>

    <% include ../../partials/script.ejs %>

    <script>
      $(document).ready(function () {
        // START: Show datatable
        $("#tableJadwalUjian")
          .DataTable({
            responsive: true,
          })
          .columns.adjust()
          .responsive.recalc();
        // END: Show datatable
      });

      // START: Delete checkbox or multiple data
      var valueList = document.getElementById("valueList");
      var listArray = [];
      var checkboxes = document.querySelectorAll(".checkbox");

      for (var checkbox of checkboxes) {
        checkbox.addEventListener("click", function () {
          if(this.checked == true) {
            listArray.push(this.value);
            document.forms["form-delete"]["valueList"].value = listArray;
          }else{
            listArray = listArray.filter(e => e !== this.value);
            document.forms["form-delete"]["valueList"].value = listArray;
          }
        })
      }
      // END: Delete checkbox or multiple data
    </script>
  </body>
</html>
