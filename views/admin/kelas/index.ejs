<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= title %> - Website Ujian Online</title>
    <% include ../../partials/header.ejs %>

    <link rel="stylesheet" href="/stylesheets/dataTable.css" />
  </head>
  <body>
    <div class="min-h-full">
      <% include ../../partials/navbar.ejs %>

      <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
          <h1 class="text-3xl font-bold text-gray-900">Data Kelas</h1>
        </div>
      </header>
      <main data-aos="fade-in">
        <div class="max-w-7xl mx-auto py-6 px-6 md:px-8">
          <!-- START: Content -->
          <% include ../../partials/alert.ejs %> 

          <% if (classes.length != 0) { %>

          <% include ./create_modal.ejs %>

          <div class="overflow-x-auto mt-6">
            <table
              id="tableKelas"
              class="stripe hover"
              style="width: 100%; padding-top: 1em; padding-bottom: 1em"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Kelas</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for( let index = 0; index < classes.length; index++ ) { %>
                <tr class="text-center">
                  <td><%= index + 1 %></td>
                  <td><%= classes[index].nama %></td>
                  <td class="flex flex-row justify-center items-center space-x-2">
                    <% include ./edit_modal.ejs %>
                    <% include ./delete_modal.ejs %>

                    <!-- <form action="/admin/destroy-kelas/<%= classes[index]._id %>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-sm md:btn-md btn-error">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 md:h-6 w-4 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </button>
                    </form> -->
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <div class="flex flex-col justify-center items-center py-10 space-y-3">
            <img src="/images/404.png" alt="404 - Not Found" class="mb-4" />
            <p class="text-center font-light">
              Ooppss, nampaknya data kelas saat ini kosong, <br />
              silahkan tambahkan kelas.
            </p>
            <% include ./create_modal.ejs %>
          <% } %>
          <!-- END: Content -->
        </div>
      </main>
    </div>

    <% include ../../partials/script.ejs %>

    <script>
      $(document).ready(function () {
        $("#tableKelas")
          .DataTable({
            responsive: true,
          })
          .columns.adjust()
          .responsive.recalc();
      });

      $("#tableKelas").on("click", "#labelModalEditKelas", function () {
        let id = $(this).data("id");
        let nama = $(this).data("nama");
        document.forms["form-edit"]["id"].value = id;
        document.forms["form-edit"]["nama"].value = nama;
      });

      $("#tableKelas").on("click", "#labelModalDeleteKelas", function () {
        let id = $(this).data("id");
        document.forms["form-delete"]["id"].value = id;
      });

    </script>
  </body>
</html>
