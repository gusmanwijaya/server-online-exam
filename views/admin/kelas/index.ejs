<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= title %> - Website Ujian Online</title>
    <% include ../../partials/header.ejs %>

    <link rel="stylesheet" href="/stylesheets/dataTable.css" />
  </head>
  <body>
    <div class="min-h-full">
      <% include ../../partials/navbar.ejs %>

      <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
          <h1 class="text-3xl font-bold text-gray-900">Data Kelas</h1>
        </div>
      </header>
      <main data-aos="fade-in">
        <div class="max-w-7xl mx-auto py-6 px-6 md:px-8">
          <!-- START: Content -->
          <% include ../../partials/alert.ejs %> 

          <% if (classes.length != 0) { %>

          <div class="flex flex-row items-center justify-between">
            <% include ./create_modal.ejs %>

            <% include ./delete_modal.ejs %>
          </div>

          <div class="overflow-x-auto mt-6">
            <table
              id="tableKelas"
              class="stripe hover"
              style="width: 100%; padding-top: 1em; padding-bottom: 1em"
            >
              <thead>
                <tr>
                  <th></th>
                  <th>Kelas</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for( let index = 0; index < classes.length; index++ ) { %>
                <tr>
                  <td>
                    <label>
                      <input type="checkbox" class="checkbox" name="checkbox" id="checkbox" value="<%= classes[index]._id %>" />
                    </label>
                  </td>
                  <td><%= classes[index].nama %></td>
                  <td>
                    <% include ./edit_modal.ejs %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <div class="flex flex-col justify-center items-center py-10 space-y-3">
            <img src="/images/404.png" alt="404 - Not Found" class="mb-4" />
            <p class="text-center font-light">
              Ooppss, nampaknya data kelas saat ini kosong, <br />
              silahkan tambahkan kelas.
            </p>
            <% include ./create_modal.ejs %>
          <% } %>
          <!-- END: Content -->
        </div>
      </main>
    </div>

    <% include ../../partials/script.ejs %>

    <script>
      $(document).ready(function () {
        // START: Show datatable
        $("#tableKelas")
          .DataTable({
            responsive: true,
          })
          .columns.adjust()
          .responsive.recalc();
      });
      // END: Show datatable

      // START: Show edit and value at modal
      $("#tableKelas").on("click", "#labelModalEditKelas", function () {
        let id = $(this).data("id");
        let nama = $(this).data("nama");
        document.forms["form-edit"]["id"].value = id;
        document.forms["form-edit"]["nama"].value = nama;
      });
      // START: Show edit and value at modal

      // START: Delete checkbox or multiple data
      var valueList = document.getElementById("valueList");
      var listArray = [];
      var checkboxes = document.querySelectorAll(".checkbox");

      for (var checkbox of checkboxes) {
        checkbox.addEventListener("click", function () {
          if(this.checked == true) {
            listArray.push(this.value);
            document.forms["form-delete"]["valueList"].value = listArray;
          }else{
            listArray = listArray.filter(e => e !== this.value);
            document.forms["form-delete"]["valueList"].value = listArray;
          }
        })
      }
      // END: Delete checkbox or multiple data

      // START: Delete only one data
      // $("#tableKelas").on("click", "#labelModalDeleteKelas", function () {
      //   let id = $(this).data("id");
      //   document.forms["form-delete"]["id"].value = id;
      // });
      // END: Delete only one data
    </script>
  </body>
</html>
