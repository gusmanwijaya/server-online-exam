<label
  for="modal-delete-kelas"
  id="labelModalDeleteKelas"
  class="btn btn-sm md:btn-md btn-error modal-button"
  data-id="<%= classes[index]._id %>"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-4 md:h-6 w-4 md:w-6"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
    />
  </svg>
</label>
<input type="checkbox" id="modal-delete-kelas" class="modal-toggle" />
<div class="modal">
  <div class="modal-box">
    <form
      action="/admin/destroy-kelas?_method=DELETE"
      method="POST"
      name="form-delete"
    >
      <p>
        Apakah Anda yakin ingin menghapus data ? Data yang telah dihapus tidak
        dapat dikembalikan lagi.
      </p>
      <div class="modal-action">
        <input type="hidden" name="id" id="id" />
        <button type="submit" class="btn btn-error">Hapus</button>
        <label for="modal-delete-kelas" class="btn">Close</label>
      </div>
    </form>
  </div>
</div>
